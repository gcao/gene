#!/usr/bin/env gene run
# TEST: if/else expressions (requires 'else' keyword)

# Simple if with else keyword
(print "if true: " (if true "yes" else "no"))
(print "if false: " (if false "yes" else "no"))

# if without else
(print "if true no else: " (if true "only if true"))
(print "if false no else: " (if false "should not print"))

# Nested if
(var y 10)
(print "nested if: " 
  (if (.< y 5)
    "less than 5"
  else
    (if (.< y 15)
      "between 5 and 15"
    else
      "greater than 15")))
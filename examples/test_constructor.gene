#!/usr/bin/env gene run

(println "=== Testing Native Constructor ===")

# Test 1: Create a Future using the native constructor
(println "Test 1: Creating Future with constructor")
(var future1 (new gene/Future))
(println "Future created:" future1)
(var state1 (future1/.state))
(println "Future state:" state1)

# Test 2: Create a Future with initial value
(println "\nTest 2: Creating Future with initial value")
(var future2 (new gene/Future "completed value"))
(println "Future created with value")
(var state2 (future2/.state))
(println "Future state:" state2)
(var val (future2/.value))
(println "Future value:" val)

(println "\n=== Constructor Test Complete ===")